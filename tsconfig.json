{
  "compilerOptions": {
    "allowJs": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6"],                     
    "module": "commonjs",                    
    "noImplicitAny": true,
    "outDir": "./dist",          
    "pretty": true,                
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,         
    "target": "ES2020",                          
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "types": ["node", "jest"],
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude" : [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.js"
  ]
}